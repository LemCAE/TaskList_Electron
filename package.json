{
  "name": "tasklist",
  "version": "1.0.4",
  "main": "main.js",
  "description": "TaskList",
  "author": "LemCAE",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/LemCAE/TaskList_Electron.git"
  },
  "scripts": {
    "start": "electron .",
    "start-forge": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "dist": "electron-builder"
  },
  "dependencies": {
    "electron-is-dev": "^3.0.1",
    "electron-updater": "^6.3.4",
    "express": "^4.19.2",
    "loudness": "^0.4.2",
    "winreg": "^1.2.5"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.4.0",
    "@electron-forge/maker-deb": "^7.5.0",
    "@electron-forge/maker-rpm": "^7.5.0",
    "@electron-forge/maker-squirrel": "^7.5.0",
    "@electron-forge/maker-zip": "^7.5.0",
    "@electron-forge/plugin-fuses": "^7.4.0",
    "electron": "^32.0.1",
    "electron-builder": "^25.0.5"
  },
  "build": {
    "appId": "com.lemcae.tasklist",
    "productName": "TaskList",
    "copyright": "1.0.4",
    "directories": {
      "output": "dist"
    },
    "electronDownload": {
      "mirror": "https://npmmirror.com/mirrors/electron/"
    },
    "files": [
      "main.js",
      "package.json",
      "preload.js",
      "config.js",
      "resource/**/*",
      "public/**/*",
      "!tempNote.md",
      "!forge.config.js",
      "!server.js",
      "!package-lock.json",
      "!.gitignore",
      "!.github/workflows/*"
    ],
    "extraFiles": [
      {
        "from": "config",
        "to": "config",
        "filter": ["**/*"]
      }
    ],
    "asar": {
      "smartUnpack": true
    },
    "icon": "resource/icon.ico",
    "win": {
      "target": [
        "portable",
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "resource/icon.ico",
      "uninstallerIcon": "resource/uninstall.ico",
      "runAfterFinish": false
    },
    "differential": true,
    "publish": [
      {
        "provider": "github",
        "owner": "LemCAE",
        "repo": "TaskList_Electron",
        "releaseType": "release"
      },
      {
        "provider": "generic",
        "url": "https://gitee.com/LemCAE/TaskList_Electron/releases/download/"
      }
    ]
  }
}
