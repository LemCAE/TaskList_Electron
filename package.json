{
  "name": "tasklist",
  "version": "1.0.6",
  "main": "main.js",
  "description": "TaskList",
  "author": "LemCAE",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/LemCAE/TaskList_Electron.git"
  },
  "scripts": {
    "start": "electron .",
    "start-forge": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "dist": "electron-builder -c"
  },
  "dependencies": {
    "electron-is-dev": "^3.0.1",
    "electron-updater": "^6.3.4",
    "express": "^4.19.2",
    "loudness": "^0.4.2",
    "winreg": "^1.2.5"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.4.0",
    "@electron-forge/maker-deb": "^7.5.0",
    "@electron-forge/maker-rpm": "^7.5.0",
    "@electron-forge/maker-squirrel": "^7.5.0",
    "@electron-forge/maker-zip": "^7.5.0",
    "@electron-forge/plugin-fuses": "^7.4.0",
    "electron": "^32.0.1",
    "electron-builder": "^25.0.5"
  },
  "build": {
    "appId": "com.lemcae.tasklist",
    "productName": "TaskList",
    "directories": {
      "output": "dist"
    },
    "electronDownload": {
      "mirror": "https://npmmirror.com/mirrors/electron/"
    },
    "files": [
      "main.js",
      "package.json",
      "preload.js",
      "config.js",
      "resource/**/*",
      "public/**/*",
      "LICENSE.txt",
      "!resource/icons/**/*"
    ],
    "asar": {
      "smartUnpack": true
    },
    "icon": "resource/icon.ico",
    "win": {
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "resource/icon.ico",
      "uninstallerIcon": "resource/uninstall.ico",
      "allowElevation": true,
      "runAfterFinish": false,
      "packElevateHelper": true,
      "include": "installer.nsh"
    },
    "publish": {
      "provider": "github",
      "owner": "LemCAE",
      "repo": "TaskList_Electron",
      "releaseType": "release"
    }
  }
}
